<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.josepgrs.reminder.Settings.MembersView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <EditText
                android:id="@+id/invitemembername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Username">

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/addmembertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/invitemembername"
                android:layout_alignBottom="@+id/invitemembername"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:text="Invite"
                android:textColor="@color/material_color_green" />

        </RelativeLayout>

        <ListView
            android:id="@+id/memberslv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</FrameLayout>
